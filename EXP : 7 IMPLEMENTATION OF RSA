#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <math.h>

long int p, q, n, t, e[100], d[100], temp[100], j, m[100], en[100], i;
char msg[100];

int prime(long int pr) {
    for (int i = 2; i <= sqrt(pr); i++)
        if (pr % i == 0)
            return 0;
    return 1;
}

long int cd(long int x) {
    long int k = 1;
    while (1) {
        k = k + t;
        if (k % x == 0)
            return (k / x);
    }
}

void ce() {
    int k = 0;
    for (i = 2; i < t; i++) {
        if (t % i == 0) continue;
        if (prime(i) && i != p && i != q) {
            e[k] = i;
            long int x = cd(e[k]);
            if (x > 0) {
                d[k] = x;
                k++;
            }
            if (k == 99) break;
        }
    }
    j = k;
}

void encrypt() {
    long int pt, ct, key = e[0], k, len;
    len = strlen(msg);
    for (i = 0; i < len; i++) {
        pt = msg[i] - 96;
        k = 1;
        for (j = 0; j < key; j++) {
            k = (k * pt) % n;
        }
        temp[i] = k;
        en[i] = k + 96;
    }
    en[i] = -1;
    printf("\nENCRYPTED MESSAGE: ");
    for (i = 0; en[i] != -1; i++)
        printf("%c", en[i]);
}

void decrypt() {
    long int pt, ct, key = d[0], k;
    i = 0;
    while (en[i] != -1) {
        ct = temp[i];
        k = 1;
        for (j = 0; j < key; j++) {
            k = (k * ct) % n;
        }
        m[i] = k + 96;
        i++;
    }
    m[i] = -1;
    printf("\nDECRYPTED MESSAGE: ");
    for (i = 0; m[i] != -1; i++)
        printf("%c", m[i]);
}

int main() {
    printf("ENTER FIRST PRIME NUMBER: ");
    scanf("%ld", &p);
    if (!prime(p)) {
        printf("INVALID INPUT\n");
        return 0;
    }

    printf("ENTER SECOND PRIME NUMBER: ");
    scanf("%ld", &q);
    if (!prime(q) || p == q) {
        printf("INVALID INPUT\n");
        return 0;
    }

    printf("ENTER MESSAGE: ");
    scanf("%s", msg);

    n = p * q;
    t = (p - 1) * (q - 1);

    ce();

    printf("\nPOSSIBLE VALUES OF e AND d:\n");
    for (i = 0; i < j; i++)
        printf("%ld\t%ld\n", e[i], d[i]);

    encrypt();
    decrypt();

    return 0;
}
